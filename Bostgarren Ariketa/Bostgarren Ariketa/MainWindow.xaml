<Window x:Class="Bostgarren_Ariketa.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Estilos y tipos de letra" Height="410" Width="430" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Border BorderBrush="SteelBlue" BorderThickness="2" CornerRadius="4" Padding="8" Background="White">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0" Text="TEXTO DE PRUEBA" FontSize="22" FontStyle="Italic" FontWeight="SemiBold"
                       HorizontalAlignment="Center" Margin="0,8,0,16"/>

            <Grid Grid.Row="1" HorizontalAlignment="Center" Margin="0,0,0,8">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Button x:Name="BtnComicSans" Content="Comic Sans" Click="BtnComicSans_Click" Width="90" Margin="4" Grid.Row="0" Grid.Column="0"/>
                <Button x:Name="BtnLodia" Content="Negrita" Click="BtnLodia_Click" Width="90" Margin="4" Grid.Row="0" Grid.Column="1"/>
                <Button x:Name="BtnMarratua" Content="Tachado" Click="BtnMarratua_Click" Width="90" Margin="4" Grid.Row="0" Grid.Column="2"/>
                <Button x:Name="BtnHandiagoa" Content="+Tamaño" Click="BtnHandiagoa_Click" Width="90" Margin="4" Grid.Row="0" Grid.Column="3"/>
                <Button x:Name="BtnCourier" Content="Courier" Click="BtnCourier_Click" Width="90" Margin="4" Grid.Row="1" Grid.Column="0"/>
                <Button x:Name="BtnEtzana" Content="Cursiva" Click="BtnEtzana_Click" Width="90" Margin="4" Grid.Row="1" Grid.Column="1"/>
                <Button x:Name="BtnAzpimarra" Content="Subrayado" Click="BtnAzpimarra_Click" Width="90" Margin="4" Grid.Row="1" Grid.Column="2"/>
                <Button x:Name="BtnTxikiagoa" Content="-Tamaño" Click="BtnTxikiagoa_Click" Width="90" Margin="4" Grid.Row="1" Grid.Column="3"/>
            </Grid>
            
            <Grid Grid.Row="3" Margin="0,0,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <TextBox x:Name="MainTextBox" Grid.Column="0" Height="50" Margin="0,0,8,0" VerticalScrollBarVisibility="Auto"
                         Text="Este será el texto seleccionado"/>
                <StackPanel Grid.Column="1" Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center">
                    <Button Content="Seleccionar" Width="90" Margin="0,0,0,8" Click="BtnHautatu_Click"/>
                    <Button Content="Salir" Width="90"/>
                </StackPanel>
            </Grid>
            <TextBlock x:Name="InfoTextBlock"
                       Grid.Row="5"
                       Text="El texto tiene 31 caracteres, y el texto seleccionado es: texto"
                       Margin="0,16,0,0"
                       HorizontalAlignment="Center"/>
            <TextBlock x:Name="TestText"
                       Grid.Row="2"
                       Text="PROBAKO TESTUA"
                       FontSize="20"
                       FontWeight="Normal"
                       TextAlignment="Center"
                       HorizontalAlignment="Center"
                       Margin="0,8,0,8"/>
        </Grid>
    </Border>
</Window>

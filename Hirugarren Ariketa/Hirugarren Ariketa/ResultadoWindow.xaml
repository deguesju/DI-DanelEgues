<Window x:Class="Hirugarren_Ariketa.ResultadoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Resultado" Height="180" Width="350" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Label Content="Resultado" Grid.Row="0" FontSize="16"/>
        <TextBox x:Name="txtResultado" Grid.Row="0" Margin="100,0,0,0" FontSize="16" Width="150" IsReadOnly="True"/>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
            <Button x:Name="btnLimpiar" Content="Limpiar" Width="100" Margin="10,0" Click="btnLimpiar_Click"/>
            <Button x:Name="btnSalir" Content="Salir" Width="100" Margin="10,0" Click="btnSalir_Click"/>
        </StackPanel>
    </Grid>
</Window>
<Window x:Class="Hirugarren_Ariketa.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cálculo de una serie de números" Height="200" Width="400" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Label x:Name="lblNumero" Content="Numero 1" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" FontSize="16"/>
        <TextBox x:Name="txtNumero" Grid.Row="0" Grid.Column="1" Margin="10,0,0,0" FontSize="16" Width="150"/>

        <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
            <Button x:Name="btnSiguiente" Content="Siguiente" Width="100" Margin="10,0" Click="btnSiguiente_Click"/>
            <Button x:Name="btnSalir" Content="Salir" Width="100" Margin="10,0" Click="btnSalir_Click"/>
        </StackPanel>
    </Grid>
</Window>
